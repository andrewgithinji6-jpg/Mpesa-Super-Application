# M-Pesa+ SuperApp Environment Configuration

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================
# Get these from Firebase Console > Project Settings > General > Your apps
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# ==============================================
# BACKEND API CONFIGURATION
# ==============================================
# Your backend server URL (for development, use your local IP or ngrok)
EXPO_PUBLIC_API_BASE_URL=http://localhost:5000
# For production, use your deployed backend URL
# EXPO_PUBLIC_API_BASE_URL=https://your-backend-domain.com

# ==============================================
# M-PESA DARAJA API CONFIGURATION (Backend)
# ==============================================
# Get these from Safaricom Developer Portal
MPESA_DARAJA_BASE_URL=https://sandbox.safaricom.co.ke
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_BUSINESS_SHORT_CODE=your_business_short_code
MPESA_PASSKEY=your_passkey_here
MPESA_INITIATOR_NAME=your_initiator_name
MPESA_SECURITY_CREDENTIAL=your_security_credential

# ==============================================
# FIREBASE ADMIN SDK (Backend)
# ==============================================
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# ==============================================
# JWT CONFIGURATION (Backend)
# ==============================================
JWT_SECRET=your_jwt_secret_key_here

# ==============================================
# SERVER CONFIGURATION (Backend)
# ==============================================
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ==============================================
# OPTIONAL: THIRD-PARTY SERVICES
# ==============================================
# For push notifications (optional)
# EXPO_PUBLIC_PUSH_NOTIFICATION_TOKEN=your_expo_push_token

# For analytics (optional)
# EXPO_PUBLIC_ANALYTICS_KEY=your_analytics_key

# ==============================================
# DEVELOPMENT NOTES
# ==============================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env files to version control
# 3. For production, use environment variables or secure config management
# 4. Make sure to enable the required APIs in Firebase Console
# 5. Configure CORS settings in your backend for your frontend URL
